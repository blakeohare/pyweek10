<Window x:Class="PyWeekMapEditor.BackgroundDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BackgroundDialog" SizeToContent="Height" Width="400">
    <Grid>
		<StackPanel Orientation="Vertical">
			<TextBlock Margin="10" Text="All backgrounds must be in the /images/backgrounds folder" />
			<StackPanel Orientation="Horizontal" Margin="10">
				<TextBlock Text="Currently selected: (none)" x:Name="FilenameDisplay" />
				<Button x:Name="ChooseButton">Choose...</Button>
				<Button x:Name="ClearButton">Clear</Button>
			</StackPanel>
			<StackPanel Margin="10" Orientation="Horizontal">
				<TextBlock Text="Scroll Rate (negative for left scroll): " />
				<TextBox x:Name="scroll_rate" Width="50" />
			</StackPanel>
			<StackPanel Orientation="Horizontal" Margin="10">
				<Button x:Name="SaveButton">Save</Button>
				<Button x:Name="CancelButton">Cancel</Button>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
