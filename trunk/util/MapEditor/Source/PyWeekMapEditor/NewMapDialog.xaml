<Window x:Class="PyWeekMapEditor.NewMapDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewMapDialog" Height="400" Width="300">
    <Grid>
		<StackPanel Orientation="Vertical">
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Width: " />
				<TextBox x:Name="mapWidth" Text="16" />
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Height: " />
				<TextBox x:Name="mapHeight" Text="14" />
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<Button Margin="10" x:Name="SaveButton">Create</Button>
				<Button Margin="10" x:Name="CancelButton">Cancel</Button>
			</StackPanel>

		</StackPanel>
	</Grid>
</Window>
